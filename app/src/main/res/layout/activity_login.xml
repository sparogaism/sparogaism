<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondarycolor"
    tools:context=".Login">

    <ImageView
        android:layout_width="340dp"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/bglogin" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/logooo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:src="@drawable/cameraorg" />

    <TextView
        android:id="@+id/text_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logooo"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:fontFamily="@font/poppinssemibold"
        android:text="Sign In To Join"
        android:textColor="@color/primarycolor"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/text_join"
        />

    <EditText
        android:id="@+id/emaill"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@+id/text_join"
        android:layout_marginTop="20dp"
        android:background="@drawable/abu_border"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppinsmedium"
        android:hint="email"
        android:layout_centerHorizontal="true"
        android:padding="8dp" />

    <EditText
        android:id="@+id/pw"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@+id/emaill"
        android:layout_marginTop="20dp"
        android:background="@drawable/abu_border"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppinsmedium"
        android:hint="password"
        android:layout_centerHorizontal="true"
        android:padding="8dp" />

    <Button
        android:id="@+id/btnsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pw"
        android:layout_marginTop="31dp"
        android:width="250dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinsbold"
        android:text="Sign In"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnsign"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-5dp"
        android:fontFamily="@font/poppinsmedium"
        android:padding="19dp"
        android:text="Donâ€™t have an account yet? " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnsign"
        android:id="@+id/signupnow"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-7dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/poppinsbold"
        android:padding="19dp"
        android:text="Sign up now "
        android:textColor="@color/sign" />


</RelativeLayout>